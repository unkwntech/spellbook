{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc"]
    },
    "source": {
        "include": ["README.md", "src", "package.json"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|index.(?:js|d.ts)$)"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": true,
        "useLongnameInNav": false,
        "default": {
            "includeDate": false
        }
    },
    "opts": {
        "encoding": "utf8",
        "private": true,
        "recurse": true
    },
    "plugins": ["plugins/markdown"],
    "markdown": {
        "hardwrap": true
    }
}
